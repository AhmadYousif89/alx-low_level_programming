CC = gcc

SRC = main.c file1.c file2.c

OBJ = $(SRC:.c=.o)

NAME = school

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	@$(RM) *~ \#*\#
	@$(RM) $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
